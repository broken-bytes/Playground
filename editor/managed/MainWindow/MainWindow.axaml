<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:playgroundEditor="clr-namespace:PlaygroundEditor"
        xmlns:controls="clr-namespace:PlaygroundEditor"
        xmlns:controls1="clr-namespace:PlaygroundEditor.Controls"
        x:Class="PlaygroundEditor.MainWindow"
        x:DataType="controls:MainWindowViewModel"
        Width="1920" Height="1080"
        CanResize="True"
        WindowStartupLocation="CenterScreen"
        KeyDown="InputElement_OnKeyDown"
        PointerPressed="InputElement_OnPointerPressed"
        Loaded="MainWindow_OnLoaded"
>
    <Grid RowDefinitions="36, 48, *, 24">
        <Border Height="36" HorizontalAlignment="Stretch" Name="TitleBar" VerticalAlignment="Top" Padding="0" Margin="0" PointerPressed="TitleBar_OnPointerPressed">
            <DockPanel Margin="0" VerticalSpacing="0" HorizontalAlignment="Stretch">
                <Grid DockPanel.Dock="Top" ColumnDefinitions ="112, *, 112">
                    <StackPanel Grid.Column="0"></StackPanel>
                    <TextBlock Grid.Column="1" Name="TitleText"
                               Text="Custom Title"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="2" Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" VerticalAlignment="Stretch" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0" Spacing="0">
                        <Button Background="Transparent" Margin="4 0 0 0">
                            <Image 
                                Source="avares://PlaygroundEditor/Assets/Icons/minimise-window.png"
                                Width="16"
                                Height="16"
                            ></Image>
                        </Button>
                        <Button Background="Transparent">
                            <Image 
                                Source="avares://PlaygroundEditor/Assets/Icons/select-window.png"
                                Width="16"
                                Height="16"
                            ></Image>
                        </Button>
                        <Button Background="Transparent" Margin="0 0 4 0">
                            <Image 
                                Source="avares://PlaygroundEditor/Assets/Icons/close-window.png"
                                Width="16"
                                Height="16"
                            ></Image>
                        </Button>
                    </StackPanel>
                </Grid>
            </DockPanel>
        </Border>
        <Grid Grid.Row="1">
            <DockPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_File">
                        <MenuItem Header="_Open..."/>
                        <Separator/>
                        <MenuItem Header="_Exit"/>
                    </MenuItem>
                    <MenuItem Header="_Edit">
                        <MenuItem Header="Copy"/>
                        <MenuItem Header="Paste"/>
                    </MenuItem>
                </Menu>
                <TextBlock/>
            </DockPanel>
        </Grid>
        <Grid 
            Grid.Row="2" 
            RowDefinitions="*, 5, 300" 
            ColumnDefinitions="250, 5, *, 5, 250" 
            VerticalAlignment="Stretch" 
        > 
            <!-- Left Panel (Resizable) --> 
            <controls1:Hierarchy        
                Grid.Column="0" 
                Grid.Row="0"/> 
 
            <GridSplitter  
                Grid.RowSpan="2" 
                Grid.Row="0" 
                Grid.Column="1"  
                Background="#16233B"  
                ResizeDirection="Columns" 
            /> 
            <playgroundEditor:NativeEngineEmbedHost 
                Grid.Column="2"  
                Grid.Row="0" 
                VerticalAlignment="Stretch" 
                Loaded="NativeEmbed_OnLoaded" 
                PointerEntered="NativeEmbed_OnGotFocus" 
                PointerExited="NativeEmbed_OnLostFocus" 
            > 
                 
            </playgroundEditor:NativeEngineEmbedHost> 
             
            <GridSplitter  
                Grid.Row="0" 
                Grid.RowSpan="2" 
                Grid.Column="3"  
                Background="#16233B"  
                ResizeDirection="Columns" 
            /> 
            <!-- Right Panel (Resizable) --> 
            <StackPanel  
                VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch" 
                Grid.Row="0" 
                Grid.Column="4"> 
                <controls1:Inspector/> 
            </StackPanel> 
             
            <GridSplitter  
                Grid.Row="1" 
                Grid.Column="0"  
                Grid.ColumnSpan="5" 
                Background="#16233B"  
                ResizeDirection="Rows" 
            /> 
            <!-- Bottom Panel for Asset Browser/Console Switcher --> 
            <TabControl 
                Grid.Row="2" 
                Grid.Column="0" 
                Grid.ColumnSpan="5" 
                Background="{DynamicResource ThemeBackgroundBrush}"
                VerticalAlignment="Stretch" 
            > 
                <TabItem Header="Content"> 
                    <TextBlock Margin="5" Foreground="#D1D8E0">This is tab 1 content</TextBlock> 
                </TabItem> 
                <TabItem Header="Code"> 
                    <TextBlock Margin="5" Foreground="Azure">This is tab 2 content</TextBlock> 
                </TabItem> 
                <TabItem Header="Console"> 
                    <TextBlock Margin="5" Foreground="Azure">This is tab 2 content</TextBlock> 
                </TabItem> 
            </TabControl> 
        </Grid> 
        <StackPanel Grid.Row="3">
            <ProgressBar Name="BackgroundProgressBar"></ProgressBar>
        </StackPanel>
    </Grid>
</Window>
