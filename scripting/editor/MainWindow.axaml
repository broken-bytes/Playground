<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:playgroundEditor="clr-namespace:PlaygroundEditor"
        x:Class="PlaygroundEditor.MainWindow"
        Width="1920" Height="1080"
        ExtendClientAreaToDecorationsHint="True"
        CanResize="False"
        WindowStartupLocation="CenterScreen"
>
    <Window.Styles>
        <Style Selector="TreeViewItem">
            <Setter Property="Foreground" Value="#D1D8E0"/>
            <Setter Property="Background" Value="#16233B"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style Selector="TreeViewItem:hover">
            <Setter Property="Background" Value="#4A90E2"/>
        </Style>
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="18"></Setter>
        </Style>
    </Window.Styles>

    <Grid 
        RowDefinitions="64, *"
        VerticalAlignment="Stretch"
    >
        <!-- Top Header (Full Width) -->
        <StackPanel 
            Background="#16233B"
            Grid.Row="0"
            PointerPressed="InputElement_OnPointerPressed"
            PointerReleased="InputElement_OnPointerReleased"
            PointerMoved="InputElement_OnPointerMoved"
        >
            <TextBlock Margin="0 16 0 0"
                       Text="Playground" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       FontSize="18" 
                       FontWeight="Bold"
            />
        </StackPanel>
        <Grid
            Grid.Row="1"
            RowDefinitions="*, 5, 300"
            ColumnDefinitions="250, 5, *, 5, 250"
            VerticalAlignment="Stretch"
        >
            <!-- Left Panel (Resizable) -->
            <StackPanel
                Grid.Column="0"
                Grid.Row="0"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Background="#1E2A47"
                Name="LeftPanel"
            >
                <Panel Background="#16233B" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4">
                    <TreeView Foreground="#D1D8E0">
                        <TreeViewItem Header="Root">
                            <TreeViewItem>
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Image Source="avares://PlaygroundEditor/Assets/Icons/cube.png" Width="20" Height="20"/>
                                    <TextBlock Foreground="White" TextAlignment="Center" Padding="0 1 0 0">Player</TextBlock>
                                </StackPanel>
                            </TreeViewItem>
                            <TreeViewItem Header="Object 2"/>
                        </TreeViewItem>
                    </TreeView>
                </Panel>
            </StackPanel>

            <GridSplitter 
                Grid.RowSpan="2"
                Grid.Row="0"
                Grid.Column="1" 
                Background="#16233B" 
                ResizeDirection="Columns"
            />
            <playgroundEditor:NativeEngineEmbedHost
                Grid.Column="2" 
                Grid.Row="0"
                VerticalAlignment="Stretch"
                Loaded="Control_OnLoaded"
            >
                
            </playgroundEditor:NativeEngineEmbedHost>
            
            <GridSplitter 
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="3" 
                Background="#16233B" 
                ResizeDirection="Columns"
            />
            <!-- Right Panel (Resizable) -->
            <StackPanel 
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Grid.Row="0"
                Grid.Column="4" Background="#1E2A47">
            </StackPanel>
            
            <GridSplitter 
                Grid.Row="1"
                Grid.Column="0" 
                Grid.ColumnSpan="5"
                Background="#16233B" 
                ResizeDirection="Rows"
            />
            <!-- Bottom Panel for Asset Browser/Console Switcher -->
            <TabControl
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="5"
                VerticalAlignment="Stretch"
                Background="#1E2A47"
            >
                <TabItem Header="Content" Background="#16233B" Foreground="White">
                    <TextBlock Margin="5" Foreground="#D1D8E0">This is tab 1 content</TextBlock>
                </TabItem>
                <TabItem Header="Console" Background="#16233B" Foreground="White">
                    <TextBlock Margin="5" Foreground="Azure">This is tab 2 content</TextBlock>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
