<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PlaygroundEditor.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
              
     <Application.Resources>
         <FontFamily x:Key="NunitoSans">avares://PlaygroundEditor/Assets/Fonts/NunitoSans.ttf</FontFamily>
         <FontFamily x:Key="Rubik">avares://PlaygroundEditor/Assets/Fonts/Rubik.ttf</FontFamily>
     </Application.Resources>    
    <Application.Styles>
        <FluentTheme />
        <Style Selector="TreeViewItem">
            <Setter Property="Foreground" Value="#D1D8E0"/>
            <Setter Property="Background" Value="#16233B"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style Selector="TreeViewItem:hover">
            <Setter Property="Background" Value="#4A90E2"/>
        </Style>
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="Height" Value="32"></Setter>
            <Setter Property="Padding" Value="8 0 8 0"></Setter>
            <Setter Property="Background" Value="#16233B"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource Rubik}"></Setter>
        </Style>
    </Application.Styles>
</Application>
