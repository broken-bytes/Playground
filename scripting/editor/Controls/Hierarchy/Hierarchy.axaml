<UserControl  xmlns="https://github.com/avaloniaui"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:controls="clr-namespace:PlaygroundEditor.Controls"
              mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
              x:Class="PlaygroundEditor.Controls.Hierarchy"
              x:DataType="controls:HierarchyViewModel" x:CompileBindings="True"
>
    <TabControl 
        Grid.Row="2" 
        Grid.Column="0" 
        Grid.ColumnSpan="5" 
        Background="{DynamicResource ThemeBackgroundBrush}"
        VerticalAlignment="Stretch" 
    > 
        <TabItem Header="Hierarchy"> 
            <Grid
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                RowDefinitions="32, *"
                Background="{DynamicResource ThemeBackgroundBrush}"
                Name="LeftPanel"
            >
                <StackPanel Grid.Row="0">
                    <Button>
                        Create
                    </Button>
                </StackPanel>
                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible">
                    <TreeView Name = "HierarchyTree" Foreground="#D1D8E0">
                    </TreeView>
                </ScrollViewer>
            </Grid>
        </TabItem> 
    </TabControl>
</UserControl>

