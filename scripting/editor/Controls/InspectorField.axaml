<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PlaygroundEditor.Controls.InspectorField">
    <Grid Name="Content" ColumnDefinitions="*, 180" HorizontalAlignment="Stretch">
        <TextBlock Name = "FieldTitle" Grid.Column="0" HorizontalAlignment="Stretch"/>
        <StackPanel Grid.Column="1" Name = "FieldContent"></StackPanel>
    </Grid>
</UserControl>

