<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PlaygroundEditor.Controls.VectorField">
    <Grid ColumnDefinitions="56, 56, 48" Width="160" Height="24">
        <StackPanel Grid.Column = "0" Orientation="Horizontal" Background="#16233B" HorizontalAlignment="Left">
            <Panel Background="Red" Width="4" VerticalAlignment="Stretch"></Panel>
            <MaskedTextBox BorderBrush="Transparent" Width="44" TextChanged="TextBox_OnTextChanged"></MaskedTextBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Background="#16233B" HorizontalAlignment="Left">
            <Panel Background="GreenYellow" Width="4" VerticalAlignment="Stretch"></Panel>
            <MaskedTextBox BorderBrush="Transparent" Width="44" TextChanged="TextBox_OnTextChanged"></MaskedTextBox>
        </StackPanel>
        <StackPanel Grid.Column="2" Orientation="Horizontal" Background="#16233B" HorizontalAlignment="Left">
            <Panel Background="DodgerBlue" Width="4" VerticalAlignment="Stretch"></Panel>
            <MaskedTextBox BorderBrush="Transparent" Width="44" TextChanged="TextBox_OnTextChanged"></MaskedTextBox>
        </StackPanel>
    </Grid>
</UserControl>

